{
  "short_name": "Shadowboxx",
  "name": "Shadowboxx",
  "description": "Collaborative Photo Albums",
  "start_url": "/",
  "display": "standalone",
  "theme_color": "#ffffff",
  "background_color": "#1B71B5",
  "icons": [
    {
      "src": "/icon-512x512.png",
      "type": "image/png",
      "sizes": "512x512",
      "purpose": "any maskable"
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "Share",
      "files": [
        {
          "name": "media[]",
          "accept": ["image/*"]
        }
      ]
    }
  }
}
